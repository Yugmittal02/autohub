rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ✅ Main User Data (Autonex ERP)
    match /appData/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;

      // Allow create if user is owner
      allow create: if request.auth != null && request.auth.uid == userId;

      // Update: Only known app fields can be changed — unknown fields blocked
      allow update: if request.auth != null && request.auth.uid == userId
                    && request.resource.data.diff(resource.data).affectedKeys()
                    .hasOnly(['entries', 'pages', 'bills', 'settings', 'salesEvents',
                              'gpsReminders', 'credentials', 'appStatus', 'lastUpdated',
                              'notes', 'inventory', 'quotations']);

      allow delete: if false; // Security: UI se document delete nahi ho sakta
    }

    // ✅ Subcollections support (History, Inventory etc.)
    match /appData/{userId}/{subcollection}/{docId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // ❌ Deny everything else
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
